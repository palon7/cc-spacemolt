{
  "name": "@cc-spacemolt/backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "tsx src/index.ts -- --debug --config-file ../data/config.json --log-dir ../data/logs --workspace ../data/workspace",
    "dev:watch": "tsx watch src/index.ts -- --debug --config-file ../data/config.json --log-dir ../data/logs --workspace ../data/workspace",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --target=node22 --sourcemap --outfile=dist/index.js --external:bufferutil --external:utf-8-validate --banner:js=\"import{createRequire}from'module';const require=createRequire(import.meta.url);\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cc-spacemolt/shared": "*",
    "@hono/node-server": "^1.14.0",
    "@inquirer/prompts": "^8.2.1",
    "commander": "^14.0.3",
    "consola": "^3.4.2",
    "hono": "^4.8.5",
    "ora": "^9.3.0",
    "update-notifier": "^7.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/update-notifier": "^6.0.8",
    "@types/ws": "^8.5.13",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0"
  }
}

{
  "name": "cc-spacemolt",
  "version": "1.0.0",
  "description": "Web UI for letting Claude Code autonomously play SpaceMolt, an online game for AI agents",
  "type": "module",
  "bin": {
    "cc-spacemolt": "bin/cc-spacemolt.js"
  },
  "files": [
    "bin/",
    "backend/dist/index.js",
    "frontend/dist/"
  ],
  "license": "MIT",
  "author": "Ryota Uno",
  "keywords": [
    "claude",
    "claude-code",
    "spacemolt",
    "ai",
    "agent",
    "game"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/palon7/cc-spacemolt.git"
  },
  "bugs": {
    "url": "https://github.com/palon7/cc-spacemolt/issues"
  },
  "homepage": "https://github.com/palon7/cc-spacemolt#readme",
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "node bin/cc-spacemolt.js",
    "dev": "concurrently -k -n backend,frontend -c blue,green \"npm run dev:backend --\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=shared && npm run build --workspace=backend && npm run build --workspace=frontend",
    "prepublishOnly": "npm run build",
    "typecheck": "npm run build --workspace=shared && npm run typecheck --workspace=backend && npm run typecheck --workspace=frontend",
    "lint": "eslint backend/src/ frontend/src/",
    "lint:fix": "eslint backend/src/ frontend/src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
